@model List<OrderListDto>
<h6 action="display-6">Sİparişlerim</h6>
<hr />
<table class="table tabel-bordered tabel-sm">
    <thead>
        <tr class="bg-danger">
            <th>Sipariş No</th>
            <th>Tarih</th>
            <th>Sipariş Toplamı</th>
            <th>Sipariş Detay</th>
         

        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.OrderDate</td>
                <td>@($"{order.TotalPrice():C0}")</td>
                <td>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#form_@order.OrderId">
                        Detay göster
                    </button>

                           <!-- Modal -->
                    <div class="modal fade" id="form_@order.OrderId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    @foreach (var orderItem in order.OrderListItems)
                                    {
                                        <div>
                                            @orderItem.ProductName
                                        </div>
                                    }

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>

           
                </td>

          </tr>
         
        }
         
                                   
    </tbody>
</table>