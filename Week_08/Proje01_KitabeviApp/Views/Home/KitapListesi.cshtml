 @model List<Kitap>                      
@{
    ViewData["Title"] = "Kitap Listesi";
}

<h1 class="display-6">Kitap Listesi</h1>
<hr>
<a asp-controller="Home" asp-action="KitapEkle" class="btn btn-sm btn-outline-primary">Yeni Kitap</a>
<hr>
<div class="container">
    <div class="row">
        @foreach (var kitap in Model)
        {
           <partial name="_Kitap" model="kitap"/>//buraya partial yaptığımız için her sayfada kullanabiliriz diye ayrı sayfada yaptık sayfa ismide _Kitap ve buradan oraya model ile foreach kitap bilgisini gönderdik
        }
    </div>
</div>