@model List<Kategori>
@{
    ViewData["Title"] = "Kategori Listesi";
}

<h1 class="display-6">Kategori Listesi</h1>
<hr>
<a asp-controller="Home" asp-action="KategoriEkle" class="btn btn-sm btn-outline-primary">Yeni Kategori</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th width="135">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td><a asp-controller="Home" asp-action="KitapListesi" asp-route-id=@k.Id>@k.Ad</a></td> @* burada kategori
                    sayfasında kategori adına tıklandığı zaman o kategoriye göre kitaplar listelenecek eğer benim uygulamamda
                    olsaydı asp-controller="Home" home yerine Menu yazacaktım benim cotrollerim MenuControllerdı *@
                @* asp-route-id buaray id yazmamızın nedeni program cs deki controller home daki id olan yer istersek orası
                    mahmut da olabilir*@
                <td>@k.Aciklama</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-controller="Home" asp-action="KategoriGuncelle" asp-route-id=@k.Id>Güncelle</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="KategoriSil" asp-route-id=@k.Id>Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>