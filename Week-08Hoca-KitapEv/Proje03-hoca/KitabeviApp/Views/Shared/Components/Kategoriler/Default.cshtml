@model List<Kategori>
    <div class="px-2">
        <h1 class="display-6 fs-3 text-primary fw-normal">Kategoriler</h1>
    </div> 
   <div class="list-group">
    @foreach (var k in Model)
    {
        <a  asp-controller="Home"asp-action="KategoriyeKitapListesi"asp-route-id=@k.Id class="list-group-item list-group-item-action">
            @k.Ad
        </a>
    }
   </div>