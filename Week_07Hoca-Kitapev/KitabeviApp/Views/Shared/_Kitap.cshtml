@* burası her bir kitabı göstermeye yarar*@
@model Kitap // buraya kitaplistesi.cshtmlden foreachle dönen 1 kitap bilgisi gelicek burayı o yüzden liste yerine sadec Kitap yaptık
@* ve kitaplistesi.cshtml den foreach arasında model=kitap yazdık*@

<div class="col-3">
    <div class="card text-center mb-4 " style="height:270px;">
        <div class="card-header bg-primary text-white ">
            <h6 class="display-6 fs-6 fw-normal m-0">@Model.Ad</h6> @* buraya model ile birlikte gelen kitap bilgisinin adını yazdırıdk*@
        </div>
        <div class="card-body bg-light">
            <div class="card-title">
                Kategori:@Model.Kategori.Ad
                
            </div>
            <div>
                <p> Yazar: @Model.Yazar.Ad</p>
                <p>Basım Yılı: @Model.BasimYili</p>
                <p>Saysa Sayısı: @Model.SayfaSayisi</p>
            </div>
        </div>
        <div class="card-footer">
            <a asp-controller="Home" asp-action="Detay"asp-route-id=@Model.Id class="btn btn-sm btn-info">İncele</a>
            <a class="btn btn-sm btn-success">Sepete Ekle</a>
        </div>
    </div>
</div>