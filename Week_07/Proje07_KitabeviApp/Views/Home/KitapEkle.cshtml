@model Kitap
@{
    ViewData["Title"] = "KitapEkle";
}

<h1 class="display-6">Yeni Kitap</h1>
<hr>
<form asp-controller="Home" asp-action="KitapEkle"  method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Ad"></label> @* asp-for labelın içine Ad yazmadık ama sayfamızda çıktı çünkü asp-for propterisin ismini alıp yazdı*@
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Ad">
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="BasimYili"></label> @* asp-for labelın içine Ad yazmadık ama sayfamızda çıktı çünkü asp-for propterisin ismini alıp yazdı*@
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="BasimYili">
        </div>
    </div>

      <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="SayfaSayisi"></label> @* asp-for labelın içine Ad yazmadık ama sayfamızda çıktı çünkü asp-for propterisin ismini alıp yazdı*@
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="SayfaSayisi">
        </div>
    </div>

      <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Ozet"></label> @* asp-for labelın içine Ad yazmadık ama sayfamızda çıktı çünkü asp-for propterisin ismini alıp yazdı*@
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Ozet">
        </div>
    </div>

      <div class="row mb-2">
        <div class="col-2">
            <label class="form-label">Kategori</label> 
        </div>
        <div class="col-4">
            <select asp-for="KategoriId" class="form-select" name="" id="">
                <option selected>Kategori Seçiniz</option>
                @foreach (var kategori in ViewBag.Kategoriler)
                {
                    <option value="@kategori.Id">@kategori.Ad</option>
                }
        
            </select>
        </div>
    </div>

    

      <div class="row mb-2">
        <div class="col-4 offset-2"> @* offset yanına ne yazarsak şu kadar kolonluk yer ayır sonra bunları yaz demek yani buraya ayrıyeten col-2 yapılmış gibi*@
           <input class="btn btn-success" type="submit" value="Kaydet">
        </div>
    </div>

</form>