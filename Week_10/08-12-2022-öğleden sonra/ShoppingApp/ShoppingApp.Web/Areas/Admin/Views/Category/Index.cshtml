@model CategoryListDto
<h1>kategoriler</h1>
<hr />
<button class="btn btn-outline-primary">yeni kategori ekle</button>
<hr />
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Url</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.Url</td>
                <td>
                    <a class="btn btn-warning btn-sm">Düzenle</a>
                    <a class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
