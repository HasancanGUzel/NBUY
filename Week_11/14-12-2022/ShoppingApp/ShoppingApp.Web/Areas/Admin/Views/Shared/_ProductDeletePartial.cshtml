@using ShoppingApp.Entity.Concrete
@model Product // buraya bu partialı kullandığımız yerden sil butonu olduğu için 1 product bilgisi geliyor o yüzdn Product olarak tuttuk

<!-- Button trigger modal -->
<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalProductDelete_@Model.Id">
    Sil
</button>

<!-- Modal -->
<div class="modal fade" id="modalProductDelete_@Model.Id" tabindex="-1" aria-labelledby="modalLabelProductDelete_@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabelProductDelete_@Model.Id">Dikkat !!!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <img src="/images/@Model.ImageUrl"/>
                </div>
                <div class="mt-2 ms-1">
                    <strong>@Model.Name</strong> adlı ürünü Silmek İstediğinizden Emin Misiniz ???
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <a
                    id="productDeleteForm_@Model.Id"
                    asp-area="Admin"
                    asp-controller="Product"
                    asp-action="Delete"
                    asp-route-id="@Model.Id"
                >@*a mıza bir id ve yolunu belirtiyoruz bu verdiğimiz id yi aşşğıdaki js kodaunda kulllanıcaz*@
                    <button 
                        type="button" 
                        class="btn btn-primary"
                            onclick="document.getElementById('productDeleteForm_@Model.Id').submit()";>Evet </button>
                            @* yukarıdaki a nın içindeki id ye göre submit olayı ekledik*@
                </a>

                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Hayır</button>
            </div>
        </div>
    </div>
</div>





